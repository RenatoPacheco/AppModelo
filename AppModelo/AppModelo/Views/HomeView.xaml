<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppModelo.Views.HomeView"
             Title="Home">
    <ContentPage.Content>

        <StackLayout Orientation="Vertical"
                     Padding="25">

            <Label Text="{Binding Opacidade, StringFormat='Valor da opacidade: {0:F2}'}"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />

            <BoxView BackgroundColor="Red"
                     Margin="10"
                     Opacity="{Binding Opacidade}"/>

            <Slider Value="{Binding Opacidade}" />

            <Entry Keyboard="Email"
                   Placeholder="Campo de entrada"/>

            <Button Text="Submeter"
                    Command="{Binding SubmeterCommand}" />

        </StackLayout>

    </ContentPage.Content>
</ContentPage>